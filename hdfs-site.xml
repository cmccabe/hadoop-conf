<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
<property>
  <name>dfs.hosts.exclude</name>
  <value>/home/cmccabe/conf/exclude.txt</value>
</property>
<property>
  <name>dfs.webhdfs.enabled</name>
  <value>true</value>
</property>
<property>
  <name>dfs.secondary.http.address</name>
  <value>0.0.0.0:5000</value>
</property>
<property>
  <name>dfs.datanode.address</name>
  <value>0.0.0.0:6100</value>
</property>
<property>
  <name>dfs.http.address</name>
  <value>0.0.0.0:6001</value>
</property>
<property>
  <name>dfs.datanode.http.address</name>
  <value>0.0.0.0:6101</value>
</property>
<property>
  <name>dfs.datanode.ipc.address</name>
  <value>0.0.0.0:6102</value>
</property>
<property>
  <name>dfs.name.dir</name>
  <value>/data/1/cmccabe/nn,/data/2/cmccabe/nn</value>
</property>
<property>
  <name>dfs.data.dir</name>
  <value>/data/1/cmccabe/dn,/data/2/cmccabe/dn,/data/3/cmccabe/dn,/data/4/cmccabe/dn,/data/5/cmccabe/dn,/data/6/cmccabe/dn,/data/7/cmccabe/dn,/data/8/cmccabe/dn,/data/9/cmccabe/dn,/data/10/cmccabe/dn</value>
</property>
<property>
  <name>fs.checkpoint.dir</name>
  <value>/data/3/cmccabe/checkpoint,/data/4/cmccabe/checkpoint</value>
</property>
<property>
  <name>dfs.heartbeat.interval</name>
  <value>3</value>
</property>
<property>
  <name>fs.checkpoint.period</name>
  <value>500000</value>
</property>
<!--
<property>
  <name>dfs.datanode.failed.volumes.tolerated</name>
  <value>1</value>
</property>
-->
<property>
  <name>dfs.namenode.name.dir.restore</name>
  <value>false</value>
</property>
<property>
  <name>dfs.datanode.scan.period.hours</name>
  <value>168</value>
</property>
<property>
  <name>dfs.datanode.directoryscan.threads</name>
  <value>1</value>
</property>
<property>
  <name>dfs.client.read.shortcircuit</name>
  <value>true</value>
</property>
<property>
  <name>dfs.domain.socket.path</name>
  <value>/var/lib/hadoop-hdfs/sock._PORT</value>
</property>
<property>
  <name>dfs.datanode.max.locked.memory</name>
  <value>25301430272</value>
</property>
<!-- Don't linger in safe mode a long time.  This makes it easy to restart a
small cluster a lot for testing. -->
<property>
  <name>dfs.namenode.safemode.extension</name>
  <value>500</value>
</property>
</configuration>
