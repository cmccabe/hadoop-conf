<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
<property>
  <name>dfs.hosts.exclude</name>
  <value>/home/cmccabe/conf/exclude.txt</value>
</property>
<property>
  <name>dfs.webhdfs.enabled</name>
  <value>true</value>
</property>
<property>
  <name>dfs.datanode.address</name>
  <value>0.0.0.0:6100</value>
</property>
<property>
  <name>dfs.http.address</name>
  <value>0.0.0.0:6001</value>
</property>
<property>
  <name>dfs.datanode.http.address</name>
  <value>0.0.0.0:6101</value>
</property>
<property>
  <name>dfs.datanode.ipc.address</name>
  <value>0.0.0.0:6102</value>
</property>
<property>
  <name>dfs.name.dir</name>
  <value>/data/1/cmccabe/caching/name,/data/2/cmccabe/caching/name</value>
</property>
<property>
  <name>dfs.data.dir</name>
  <value>/data/2/cmccabe/caching/data,/data/3/cmccabe/caching/data,/data/4/cmccabe/caching/data,/data/5/cmccabe/caching/data,/data/6/cmccabe/caching/data,/data/7/cmccabe/caching/data,/data/8/cmccabe/caching/data,/data/9/cmccabe/caching/data,/data/10/cmccabe/caching/data,/data/11/cmccabe/caching/data</value>
</property>
<property>
  <name>fs.checkpoint.dir</name>
  <value>/data/3/cmccabe/caching/checkpoint,/data/4/cmccabe/caching/checkpoint</value>
</property>
<property>
  <name>dfs.heartbeat.interval</name>
  <value>1</value>
</property>
<property>
  <name>fs.checkpoint.period</name>
  <value>3600000</value> <!-- one hour between checkpoints -->
</property>
<property> <!-- no failures tolerated or repaired -->
  <name>dfs.datanode.failed.volumes.tolerated</name>
  <value>0</value>
</property>
<property>
  <name>dfs.namenode.name.dir.restore</name>
  <value>false</value>
</property>
<property>
  <name>dfs.datanode.scan.period.hours</name>
  <value>10</value>
</property>
<property>
  <name>dfs.client.buffer.dir</name>
  <value>/home/cmccabe/r/buffer</value>
</property>
<property>
  <name>dfs.datanode.directoryscan.threads</name>
  <value>1</value>
</property>
<!-- short-circuit -->
<property>
  <name>dfs.domain.socket.path</name>
  <value>/var/lib/hadoop-hdfs/dn_sock._PORT</value>
</property>
<property>
  <name>dfs.client.read.shortcircuit</name>
  <value>true</value>
</property>
<property> <!-- TODO: revisit this -->
  <name>dfs.client.read.shortcircuit.skip.checksum</name>
  <value>true</value>
</property>
<property>
  <name>dfs.namenode.caching.enabled</name>
  <value>true</value>
</property>
<property>
  <name>dfs.datanode.max.locked.memory</name>
  <value>26843545600</value>
</property>
<property>
  <name>dfs.datanode.hdfs-blocks-metadata.enabled</name>
  <value>true</value>
</property>
<property>
  <name>dfs.client.file-block-storage-locations.timeout</name>
  <value>5000</value>
</property>
</configuration>
