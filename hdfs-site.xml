<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
<property>
  <name>dfs.name.dir</name>
  <value>/r/name1,/r/name2</value>
</property>
<property>
  <name>dfs.data.dir</name>
  <value>/r/data1,/r/data2</value>
</property>
<property>
  <name>fs.checkpoint.dir</name>
  <value>/r/chkpt1,/r/chkpt2</value>
</property>
<property>
  <name>dfs.heartbeat.interval</name>
  <value>1</value>
</property>
<property>
  <name>fs.checkpoint.period</name>
  <value>30</value> <!-- deliberately short in order to test checkpointing foo -->
</property>
<!--
<property>
  <name>dfs.datanode.failed.volumes.tolerated</name>
  <value>1</value>
</property>
-->
<property>
  <name>dfs.namenode.name.dir.restore</name>
  <value>true</value>
</property>
<property>
  <name>dfs.datanode.scan.period.hours</name>
  <value>1</value>
</property>
<property>
  <name>dfs.client.buffer.dir</name>
  <value>/r/buffer</value>
</property>
<property>
  <name>dfs.datanode.directoryscan.threads</name>
  <value>1</value>
</property>
<!-- General HDFS security config -->
<property>
  <name>dfs.block.access.token.enable</name>
  <value>true</value>
</property>
 
<!-- NameNode security config -->
<property>
  <name>dfs.namenode.keytab.file</name>
  <value>/home/cmccabe/conf/hdfs.keytab</value> <!-- path to the HDFS keytab -->
</property>
<property>
  <name>dfs.namenode.kerberos.principal</name>
  <value>hdfs/_HOST@CLOUDERA.COM</value>
</property>
<property>
  <name>dfs.namenode.kerberos.internal.spnego.principal</name>
  <value>HTTP/_HOST@CLOUDERA.COM</value>
</property>
 
<!-- Secondary NameNode security config -->
<property>
  <name>dfs.secondary.namenode.keytab.file</name>
  <value>/home/cmccabe/conf/hdfs.keytab</value> <!-- path to the HDFS keytab -->
</property>
<property>
  <name>dfs.secondary.namenode.kerberos.principal</name>
  <value>hdfs/_HOST@CLOUDERA.COM</value>
</property>
<property>
  <name>dfs.secondary.namenode.kerberos.internal.spnego.principal</name>
  <value>HTTP/_HOST@CLOUDERA.COM</value>
</property>
 
<!-- DataNode security config -->
<property>
  <name>dfs.datanode.data.dir.perm</name>
  <value>700</value> 
</property>
<property>
  <name>dfs.datanode.keytab.file</name>
  <value>/home/cmccabe/conf/hdfs.keytab</value> <!-- path to the HDFS keytab -->
</property>
<property>
  <name>dfs.datanode.kerberos.principal</name>
  <value>hdfs/_HOST@CLOUDERA.COM</value>
</property>

<property>
  <name>dfs.datanode.address</name>
  <value>127.0.0.1:1001</value>
</property>
<property>
  <name>dfs.http.address</name>
  <value>127.0.0.1:1002</value>
</property>
<property>
  <name>dfs.datanode.http.address</name>
  <value>127.0.0.1:1003</value>
</property>
<property>
  <name>dfs.datanode.ipc.address</name>
  <value>127.0.0.1:1004</value>
</property>

</configuration>
