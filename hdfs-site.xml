<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
<property>
  <name>dfs.name.dir</name>
  <value>/r/name1,/r/name2</value>
</property>
<property>
  <name>dfs.data.dir</name>
  <value>/r/data1,/r/data2</value>
</property>
<property>
  <name>fs.checkpoint.dir</name>
  <value>/r/chkpt1,/r/chkpt2</value>
</property>
<property>
  <name>dfs.heartbeat.interval</name>
  <value>1</value>
</property>
<property>
  <name>fs.checkpoint.period</name>
  <value>30</value> <!-- deliberately short in order to test checkpointing foo -->
</property>
<!--
<property>
  <name>dfs.datanode.failed.volumes.tolerated</name>
  <value>1</value>
</property>
-->
<property>
  <name>dfs.namenode.name.dir.restore</name>
  <value>true</value>
</property>
<property>
  <name>dfs.datanode.scan.period.hours</name>
  <value>1</value>
</property>
<property>
  <name>dfs.client.buffer.dir</name>
  <value>/r/buffer</value>
</property>
<property>
  <name>dfs.datanode.directoryscan.threads</name>
  <value>1</value>
</property>

<!-- settings to make testing fsck easier:
     * small blocksize, to make multi-block files more common.
     * rapid directory scan so we notice corruption earlier
     * short block report interval
-->
<property>
  <name>dfs.blocksize</name>
  <value>1024</value>
</property>
<property>
  <name>dfs.block.size</name> <!-- branch-1 version -->
  <value>1024</value>
</property>
<property>
  <name>dfs.datanode.directoryscan.interval</name>
  <value>1</value>
</property>
<property>
  <name>dfs.blockreport.intervalMsec</name>
  <value>10000</value>
</property>
</configuration>
