<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <!-- WARNING: anything you put here may be overwritten by HDFS defaults!
  Still, you have to put configuration options that clients also need in
  here. -->
  <property>
    <name>fs.default.name</name>
    <value>hdfs://a2402.halxg.cloudera.com</value>
  </property>
  <property>
    <name>hadoop.tmp.dir</name>
    <value>/data/11/cmccabe/tmp</value>
  </property>
  <property>
    <name>hadoop.security.group.mapping</name>
    <value>org.apache.hadoop.security.JniBasedUnixGroupsMapping</value>
  </property>

  <!-- Shell HTrace configuration -->
  <property>
    <name>dfs.shell.htrace.sampler</name>
    <value>AlwaysSampler</value>
  </property>
  <property>
    <name>dfs.shell.htrace.spanreceiver.classes</name>
    <!-- <value>org.apache.htrace.impl.LocalFileSpanReceiver</value> -->
    <value>org.apache.htrace.impl.HTracedRESTReceiver</value>
  </property>
  <property>
    <name>dfs.shell.htrace.htraced.rest.url</name>
    <value>http://a2402.halxg.cloudera.com:9095/</value>
  </property>
</configuration>
